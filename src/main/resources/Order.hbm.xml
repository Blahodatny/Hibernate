<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="retail.Order" table="orders" schema="public" catalog="Retail_Service">
        <id name="orderNumber">
            <column name="order_number" sql-type="integer"/>
        </id>
        <property name="toStreet">
            <column name="toStreet" sql-type="text"/>
        </property>
        <property name="toCity">
            <column name="toCity" sql-type="text"/>
        </property>
        <property name="shipDate">
            <column name="shipDate" sql-type="timestamp"/>
        </property>
        <many-to-one name="customersByPhone" class="retail.Customer">
            <column name="phone"/>
        </many-to-one>
    </class>
</hibernate-mapping>