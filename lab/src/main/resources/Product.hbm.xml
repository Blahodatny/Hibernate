<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="project.retail.Product" table="products" schema="public" catalog="Retail_Service">
        <id name="productId">
            <column name="product_id" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="productType">
            <column name="productType" sql-type="text"/>
        </property>
        <property name="_new">
            <column name="isNew" sql-type="boolean"/>
        </property>
    </class>
</hibernate-mapping>