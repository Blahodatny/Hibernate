<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="retail.Customer" table="customers" schema="public" catalog="Retail_Service">
        <id name="phone">
            <column name="phone" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="street">
            <column name="street" sql-type="text" not-null="true"/>
        </property>
        <property name="city">
            <column name="city" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>